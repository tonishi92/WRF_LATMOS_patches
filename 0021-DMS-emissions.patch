+   real :: w10, dms_emi, k_dms, dms_ocean_sfc = 0.0, sc_co2 = 600.0, sc_dms, &
+                sst_ij_cels
+
+!       
+! add emissions
+!
+
+   do j=jts,jte  
+      do i=its,ite 
