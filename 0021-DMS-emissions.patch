+    REAL(KIND=dp) FUNCTION Keff3 ( A0,B0,C0, TEMP,y2 )
+    REAL(KIND=dp),INTENT(IN) :: y2
+    REAL(KIND=dp),INTENT(IN) :: TEMP
+    REAL(KIND=dp),INTENT(IN):: A0,B0,C0
+
+    Keff3 = y2*(A0 * EXP(- B0 /TEMP ) &
+      *(TEMP/300._dp)**C0)
+
